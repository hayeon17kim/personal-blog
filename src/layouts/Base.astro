---
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";

interface Props {
	meta: SiteMeta;
}

const { meta = { title: siteConfig.title } } = Astro.props;
const { articleDate, description = siteConfig.description, ogImage, title = siteConfig.title } = meta;
---

<html class="scroll-smooth" lang={siteConfig.lang}>
	<head>
		<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />
	</head>
	<body
		class="bg-global-bg text-global-text mx-auto flex min-h-screen max-w-3xl flex-col px-4 pt-16 font-sans text-sm font-normal antialiased sm:px-8"
	>
		<ThemeProvider />
		<SkipLink />
		<Header />
		<main id="main" class="flex-1">
			<article
				class="prose prose-sm dark:prose-invert prose-headings:font-semibold prose-headings:text-accent-2 prose-a:text-accent-2 prose-a:no-underline hover:prose-a:underline prose-img:rounded-lg prose-h1:text-2xl prose-h2:text-xl prose-p:text-base max-w-none"
			>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
